@model IEnumerable<com.jrealpec.mscloudexperts.halterofilia.Models.Competencia>
@{
    ViewData["Title"] = @ViewBag._SiteName;
}
<ol class="breadcrumb">
    <li class="active"><i class="fas fa-home fa-fw"></i>@Convert.ToString(string.Format("{0:MMMM dd, yyyy}", DateTime.Now.ToUniversalTime().AddHours(-5)))</li>
</ol>
<div class="col-sm-12">
    <div class="well">
        <h3>
            Welcome to <strong>@ViewBag._SiteName</strong>
        </h3>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <h2>
         Listado de Competencia <small>msCloudExperts-Hareltofia</small>
        </h2>
    </div>
    <div class="col-md-6">
        @Html.ActionLink("Add New", "AddEditCompetencia", "Competencia", null, new { @class = "btn btn-primary buttonAdd" })
    </div>
</div>
 <div class="row">
    <div class="col-sm-12">
        <div class="col-sm-9">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div>
                        <table id="tblCompetenciaList" class="display table table-bordered dataTable table-hover" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Pais</th>
                                    <th>Deportista</th>
                                    <th>Modalidad</th>
                                    <th>Cantidad</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="align-middle">@item.Nom_Pais</td>
                                        <td class="align-middle">@item.Nom_Deportista</td>
                                        <td class="align-middle">@item.Nom_Modalidad</td>
                                        <td class="align-middle">@item.Cantidad</td>
                                        <td>
                                            @Html.ActionLink("Edit", "AddUpdateCompetencia", new { Id = @item.CodCompetencia }, new { @class = "btn btn-primary" })
                                            @Html.ActionLink("Delete", "DeleteCompetencia", new { Id = @item.CodCompetencia }, new { @class = "btn btn-danger", onclick = "return confirm('Are you sure you wish to delete this registry?');" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                <div>
            </div>
        </div>
    </div>
    </div>
</div>
</div>

<style>
    .imageStyle {
        width: 100px;
        height: 100px;
    }

    .buttonAdd {
        float: right;
        margin-top: 20px;
    }
</style>
<link href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css" rel="stylesheet" />
@section scripts{
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $(function () {
                $('#tblCompetenciaList').DataTable({
                    "paging": true,
                    "lengthChange": true,
                    "searching": true,
                    "ordering": true,
                    "info": true,
                    "autoWidth": true,
                });
            });

        });
    </script>
 }